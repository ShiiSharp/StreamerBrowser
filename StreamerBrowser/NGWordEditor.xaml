<Window x:Class="StreamerBrowser.NGWordEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamerBrowser"
        mc:Ignorable="d"
        Title="NGワード編集" Height="480" Width="640">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Margin="6,6,6,6" Name="TextBoxNGWord"  DataContext="NGWords" AcceptsReturn="True"/>
        <Button Name="ButtonOK" Content="　設定　" Grid.Column="1" Grid.Row="1" Margin="4,4,4,4" Height="Auto" Width="Auto" Click="ButtonOK_Click" />
        <Button Name="ButtonCancel" Content="キャンセル" Grid.Column="2" Grid.Row="1" Margin="4,4,4,4" Height="Auto" Width="Auto" Click="ButtonCancel_Click"/>

    </Grid>
</Window>
